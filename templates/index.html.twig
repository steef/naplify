{% extends 'base.html.twig' %}


{% block body %}

    <style>
        body {
            background: #DFFFD6;
            font: 18px/1.5 sans-serif;
            margin: 0;
        }
        .wrapper {
            margin: 1em auto;
            display: flex;
            flex-direction: column;
            align-items: center;
        }
    </style>

    <div class="wrapper">
        <h1>Welcome to Naplify ðŸ‘‹</h1>

        <br>

        <form action="{{ path('index') }}" method="post">
            <label for="napLength"></label>
            <input type="range" id="napLength" name="napLength" min="20" max="30" value="25" oninput="updateMinutes()">
            <span id="lengthValue">25 minutes</span>
            <input type="hidden" name="_token" value="{{ csrf_token('slider_form') }}">
            <button type="submit">Submit</button>
        </form>

        <script>
            function updateMinutes() {
                const napLengthInput = document.getElementById('napLength').value;
                const napLengthDisplay = document.getElementById('lengthValue');

                napLengthDisplay.innerText = `${napLengthInput} minutes`;
            }
        </script>
    </div>

{% endblock %}
